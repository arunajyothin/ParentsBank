@model PAN_ParentsBank_Final.Models.Transaction

<h2>DELETE TRANSACTION</h2>

<br />

<div>
    <h4>TRANSACTION SUMMARY</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            PARENT EMAIL ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account.Owner)
        </dd>

        <dt>
            TRANSACTION DATE
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>

        <dt>
            AMOUNT DATE
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            NOTES
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>

        <dt>
            TRANSACTION TYPE
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TypeOfTransaction)
        </dd>

    </dl>

    <br />

    <h4>Are you sure you want to delete this transaction?</h4>

    <br />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        @*<div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>*@

        <div class="form-actions no-color">
            <input type="submit" value="YES, DELETE" class="btn btn-danger" /> |
            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Index", "Transactions")';return false;">
                <span class="glyphicon glyphicon-circle-arrow-left"></span> NO, BACK TO LIST
            </button>
        </div>

    }
</div>
