@model PAN_ParentsBank_Final.Models.RegisterViewModel
@{
    ViewBag.Title = "Join Us Today";
}

<div class="row">
    <div class="jumbotron text-center" style="height:650px;width:100%;background-image:url(/Content/_jefferson.PNG); background-repeat:no-repeat" >
    <h3 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size:25pt"><strong>WELCOME TO A PLACE YOU CAN CALL HOME</strong></h3> 
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        <div class="main-login main-center" style="background-color: #fff; -moz-border-radius: 2px; -webkit-border-radius: 2px; border-radius: 2px; -moz-box-shadow: 0px 2px 2px rgba(0,0,0,0.3); -webkit-box-shadow: 0px 2px 2px rgba(0,0,0,0.3); box-shadow: 0px 2px 2px rgba(0,0,0,0.3); margin-top:0px; margin: 0 auto; max-width:330px; padding: 10px 40px; margin-right:0px">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new {@class = "cols-sm-2 control-label" })
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email", @style = "height:50px" })
                    </div>
                </div>
             </div>
            <div class="form-group" style="margin-bottom:15px">
              @Html.LabelFor(m => m.Password, new { @class = "cols-sm-2 control-label" })
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                         @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password", @style = "height:50px" })                         
                    </div>
                </div>
            </div>
            <div class="form-group">
             @Html.LabelFor(m => m.ConfirmPassword, new { @class = "cols-sm-2 control-label" })
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder= "Confirm your password", @style = "height:50px" })
                    </div>
                 </div>
                
               </div>
            <div class="form-group">                
                    <input type="submit" class="btn btn-primary btn-lg btn-block login-button" style="margin-top:5px" value="REGISTER" />
             </div>
            @Html.ValidationSummary("", new { @class = "text-danger", @style = "font-size:10pt" })
        </div>
    }
    </div>
 </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
