@model PAN_ParentsBank_Final.Models.Account


<h3>EDIT ACCOUNT DETAILS </h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="control-label col-md-2">
                <h5><strong>PARENT EMAIL</strong></h5>
            </div>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Owner, new { htmlAttributes = new { @class = "form-control",} })
                @Html.ValidationMessageFor(model => model.Owner, "", new { @class = "text-danger" })
                <h4 style="margin-top:15px">@Model.Owner</h4>
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.OpenDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <h5><strong>RECIPIENT</strong></h5>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Recipient, new { htmlAttributes = new { @class = "form-control" , @style="height:40px"}})
                @Html.ValidationMessageFor(model => model.Recipient, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <h5><strong>RECIPIENT NAME</strong></h5>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "height:40px" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <h5><strong>INTEREST RATE</strong></h5>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.InterestRate, new { htmlAttributes = new { @class = "form-control", @style = "height:40px" } })
                @Html.ValidationMessageFor(model => model.InterestRate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SAVE" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-primary active" onclick="location.href='@Url.Action("Index", "Accounts")';return false;">
        <span class="glyphicon glyphicon-circle-arrow-left"></span> BACK TO ACCOUNT LIST
    </button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
