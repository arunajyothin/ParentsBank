@model PAN_ParentsBank_Final.Models.Account

<h2>DELETE ACCOUNT</h2>

<br />
<br />
<div>
    <h4>ACCOUNT DETAILS</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            OWNER
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Owner)
        </dd>

        <dt>
            RECIPIENT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Recipient)
        </dd>

        <dt>
            RECIPIENT NAME
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            INTEREST RATE
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InterestRate)
        </dd>

    </dl>

    <h3>Are you sure you want to delete this account?</h3>
    <br />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="YES, DELETE" class="btn btn-danger" /> |
            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Index", "Accounts")';return false;">
                <span class="glyphicon glyphicon-circle-arrow-left"></span> NO, BACK TO LIST
            </button>
        </div>
    }
</div>
